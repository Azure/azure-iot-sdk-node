{
	"scripts": {
		"npmlockrefresh": "npm i --package-lock-only",
		"cm": "git-cz",
		"postinstall": "(cd device/samples && npm install); (cd device/samples/pnp && npm install)"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.2",
		"lerna": "^4.0.0",
		"mocha": "^7.1.1"
	},
	"engines": {
		"node": ">=12.0.0"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"header-max-length": [
				0,
				"always",
				150
			]
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"dependencies": {
		"typescript": "3.7.5"
	}
}
