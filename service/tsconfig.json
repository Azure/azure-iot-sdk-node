    "compilerOptions": {
        "outDir": "./dist",
        "target":"es5",
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "lib": [
            "es6", "dom"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./dist",
        "node_modules",
        "./samples"
    ]
}