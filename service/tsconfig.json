{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist-esm",
        "target":"es6",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "dist_esm",
        "build",
        "dist",
        "node_modules",
        "samples"
    ]
}
